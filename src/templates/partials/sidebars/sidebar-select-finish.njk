<div id="textures-sidebar" class="sidebar">
  <div class="sidebar__container">
    <div class="sidebar__header">
      <h2 class="sidebar__title">Select finish</h2>
      <button type="button" class="sidebar__close" data-sidebar-close>
        <svg class="icon">
          <use xlink:href="#close"></use>
        </svg>
      </button>
    </div>
  
    <div class="sidebar__content">
      <div class="sidebar__select-finish">
        <div class="sidebar__select-finish-text d-lg-none">Please be aware that colour and texture might vary from your screen to the product.</div>

        <div class="sidebar__select-finish-top texture-info d-none d-lg-block" > ver. 009 95 / Code: 86.0057.01</div>
  
        <div class="sidebar__select-finish-item">
          <h4>Fabric Upholstery</h4>
          <ul class="sidebar__select-finish-list">
            {% set textures = ['texture', 'texture-1', 'texture-2', 'texture-3'] %}
            {% for i in range(1, 13) %}
              <li class="classHandbook"
                  id="id-{{ i }}"
                  propertycode="GFM1-{{i}}"
                  propertyvalue="2509 Status, cat 25"
                  propertyindex="{{ i }}"
                  propertyprice="+$6{{ i }}.00"
                  propertypriceid="204309"
                  propertyhandbookorder="unchecked"
              >
                <img src="images/{{ textures[(i - 1) % textures | length] }}.webp"
                    material-src="images/{{ textures[(i - 1) % textures | length] }}.webp"
                    height="50"
                    alt="2509 Status, cat 25"
                />
              </li>
            {% endfor %}
          
          </ul>
        </div>
  
        <div class="sidebar__select-finish-item">
          <h4>Leather & Faux Leather</h4>
          <ul class="sidebar__select-finish-list">
            {% set textures = ['texture', 'texture-1', 'texture-2', 'texture-3'] %}
            {% for i in range(1, 13) %}
              <li class="classHandbook"
                  id="id-{{ i }}"
                  propertycode="GFM1-{{i}}"
                  propertyvalue="2509 Status, cat 25"
                  propertyindex="{{ i }}"
                  propertyprice="+$6{{ i }}.00"
                  propertypriceid="204309"
                  propertyhandbookorder="unchecked"
              >
                <img src="images/{{ textures[(i - 1) % textures | length] }}.webp"
                    material-src="images/{{ textures[(i - 1) % textures | length] }}.webp"
                    height="50"
                    alt="2509 Status, cat 25"
                />
              </li>
            {% endfor %}
          
          </ul>
        </div>
  
        <div class="sidebar__select-finish-item">
          <h4>Leather & Faux Leather</h4>
          <ul class="sidebar__select-finish-list">
            {% set textures = ['texture', 'texture-1', 'texture-2', 'texture-3'] %}
            {% for i in range(1, 13) %}
              <li class="classHandbook"
                  id="id-{{ i }}"
                  propertycode="GFM1-{{i}}"
                  propertyvalue="2509 Status, cat 25"
                  propertyindex="{{ i }}"
                  propertyprice="+$6{{ i }}.00"
                  propertypriceid="204309"
                  propertyhandbookorder="unchecked"
              >
                <img src="images/{{ textures[(i - 1) % textures | length] }}.webp"
                    material-src="images/{{ textures[(i - 1) % textures | length] }}.webp"
                    alt=""
                />
              </li>
            {% endfor %}
          
          </ul>
        </div>
      </div>
    </div>
  
    <div class="sidebar__footer">
      <div class="sidebar__select-finish-footer">
        <div class="d-lg-none w-full">
          <div class="mob-finish">
            <div class="row justify-content-between">
              <div class="col-8">With leather pad</div>
              <div class="col-4 propertycode text-end"></div>
            </div>
            <div class="row justify-content-between">
              <div class="col-8">Price</div>
              <div class="col-4 propertyprice text-end">+$69.00</div>
            </div>
          </div>
        </div>
        <button type="button" class="btn btn-dark" data-sidebar-select-finish>Select Finish</button>
        <div class="sidebar__select-finish-price d-none d-lg-block">From <span>$5,200.00</span></div>
        <div class="sidebar__select-finish-text d-none d-lg-block">Please be aware that colour and texture might vary from your screen to the product.</div>
      </div>
    </div>
  </div>
</div>

