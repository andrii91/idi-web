                </div>
            </div>
        </div>

        <!-- Inputs Section -->
        <div class="component-section" id="inputs">
            <div class="component-section__header">
                <h2 class="component-section__title">Input Fields</h2>
            </div>
            <div class="component-section__content">
                <div class="component-section__demo">
                    <div class="component-variants">
                        <div class="component-variant">
                            <div class="component-variant__title">Text Input (Light Background)</div>
                            <div class="light-bg">
                                <label>
                                    <input class="input-text" type="text" placeholder="Enter your name">
                                </label>
                            </div>
                        </div>
                        <div class="component-variant">
                            <div class="component-variant__title">Email Input (Dark Background)</div>
                            <div class="dark-bg">
                                <label>
                                    <input class="input-text" type="email" placeholder="Enter your email">
                                </label>
                            </div>
                        </div>
                        <div class="component-variant">
                            <div class="component-variant__title">Search Input</div>
                            <div class="light-bg">
                                <label>
                                    <input class="input-text" type="search" placeholder="Search...">
                                </label>
                            </div>
                        </div>
                        <div class="component-variant">
                            <div class="component-variant__title">Textarea</div>
                            <div class="light-bg">
                                <textarea class="input-text" placeholder="Enter your message"></textarea>
                            </div>
                        </div>
                        <div class="component-variant">
                            <div class="component-variant__title">Error State</div>
                            <div class="dark-bg">
                                <label>
