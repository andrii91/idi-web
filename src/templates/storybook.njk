                </div>
            </div>
        </div>

        <!-- Checkboxes & Radio Buttons Section -->
        <div class="component-section" id="checkboxes-radio">
            <div class="component-section__header">
                <h2 class="component-section__title">Checkboxes & Radio Buttons</h2>
            </div>
            <div class="component-section__content">
                <div class="component-section__demo">
                    <div class="component-variants">
                        <div class="component-variant">
                            <div class="component-variant__title">Checkboxes</div>
                            <div>
                                <label class="custom-checkbox">
                                    <input type="checkbox" value="option1"> 
                                    <span>Option 1</span>
                                </label>
                                <label class="custom-checkbox">
                                    <input type="checkbox" value="option2" checked> 
                                    <span>Option 2 (Checked)</span>
                                </label>
                                <label class="custom-checkbox">
                                    <input type="checkbox" value="option3"> 
                                    <span>Option 3</span>
                                </label>
                            </div>
                        </div>
                        <div class="component-variant">
                            <div class="component-variant__title">Radio Buttons</div>
                            <div>
                                <label class="custom-radio">
                                    <input type="radio" name="radio-group" value="radio1"> 
                                    <span>Radio Option 1</span>
                                </label>
                                <label class="custom-radio">
                                    <input type="radio" name="radio-group" value="radio2" checked> 
                                    <span>Radio Option 2 (Selected)</span>
                                </label>
                                <label class="custom-radio">
                                    <input type="radio" name="radio-group" value="radio3"> 
                                    <span>Radio Option 3</span>
                                </label>
                            </div>
                        </div>
                        
                    </div>
                </div>
                
                <div class="component-section__code">
                    <pre><code>&lt;!-- Checkboxes --&gt;
&lt;label class="custom-checkbox"&gt;
    &lt;input type="checkbox" value="option1"&gt; 
