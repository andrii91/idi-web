<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="initial-scale=1.0, width=device-width">
  <meta name="Title" content="Italian Design Interiors" />
  <meta name="description" content="" />
  <meta property="og:type" content="article" />
  <meta property="og:description" content="" />
  <meta property="og:url" content="" />
  <meta property="og:sitename" content="" />
  <meta property="og:title" content="Italian Design Interiors">
  <meta property="og:image" content="images/og.png" />
  <title>Checkout - Italian Design Interiors</title>
  <link rel="icon" type="image/png" href="favicon/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="favicon/favicon.svg" />
  <link rel="apple-touch-icon" href="favicon/apple-touch-icon.png" />
  <link rel="manifest" href="favicon/site.webmanifest" />
  <link rel="stylesheet" href="css/style.css">
</head>

<body>
  <!-- Header -->
  {% include "partials/menu.njk" %}

  <!-- Main Content -->
  <main class="checkout-page">
    <section class="checkout-page__section">
      <div class="container-xxl">
        <div class="row">
          <!-- Left Column - Checkout Form -->
          <div class="col-lg-8">
            <div class="checkout-page__section-wrap">
              <h1 class="checkout-page__title">Checkout</h1>

              <!-- Checkout Form -->
              <div class="checkout-page__step">
                <div class="checkout-page__step-number">1</div>
                <span class="checkout-page__step-text">Billing & Shipping info</span>
              </div>

              <form class="checkout-page__form">
                <!-- Shipping Address Section -->
                <div class="checkout-page__form-section">
                  <h3 class="checkout-page__section-title">Shipping address</h3>
                  <div class="checkout-page__form-fields">
                    <div class="row">
                      <div class="col-md-6">
                        <label class="checkout-page__form-field label">
                          <input type="text" name="first_name" id="shipping-first-name" class="input-text dark"
                            placeholder="First name" required>
                        </label>
                      </div>
                      <div class="col-md-6">
                        <label class="checkout-page__form-field label">
                          <input type="text" name="last_name" id="shipping-last-name" class="input-text dark"
                            placeholder="Last name" required>
                        </label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <label class="checkout-page__form-field label">
                          <input type="tel" name="phone" id="shipping-phone" class="input-text dark" placeholder="Phone"
                            required>
                        </label>
                      </div>
                      <div class="col-md-6">
                        <label class="checkout-page__form-field label">
                          <input type="email" name="email" id="shipping-email" class="input-text dark"
                            placeholder="Email" required>
                        </label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <label class="checkout-page__form-field label">
                          <input type="text" name="address" id="shipping-address" class="input-text dark"
                            placeholder="Address" required>
                        </label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <label class="checkout-page__form-field label">
                          <input type="text" name="city" id="shipping-city" class="input-text dark" placeholder="City"
                            required>
                        </label>
                      </div>
                      <div class="col-md-4">
                        <label class="checkout-page__form-field label">
                          <input type="text" name="state" id="shipping-state" class="input-text dark"
                            placeholder="State" required>
                        </label>
                      </div>
                      <div class="col-md-4">
                        <label class="checkout-page__form-field label">
                          <input type="text" name="zip" id="shipping-zip" class="input-text dark" placeholder="Zip"
                            required>
                        </label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <label class="checkout-page__form-field label">
                          <input type="text" name="company" id="shipping-company" class="input-text dark"
                            placeholder="Company name - optional">
                        </label>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Same as Shipping Checkbox -->
                <div class="same-as-shipping checkout-page__same-as-shipping">
                  <label class="custom-checkbox">
                    <input type="checkbox" id="same-as-shipping">
                    <span>Billing address same as shipping address</span>
                  </label>
                </div>

                <!-- Billing Address Section -->
                <div class="checkout-page__form-section checkout-page__billing-address">
                  <h3 class="checkout-page__section-title">Billing address</h3>
                  <div class="checkout-page__form-fields">
                    <div class="row">
                      <div class="col-md-6">
                        <label class="checkout-page__form-field label">
                          <input type="text" id="billing-first-name" name="first_name_billing" class="input-text dark"
                            placeholder="First name" required>
                        </label>
                      </div>
                      <div class="col-md-6">
                        <label class="checkout-page__form-field label">
                          <input type="text" id="billing-last-name" name="last_name_billing" class="input-text dark"
                            placeholder="Last name" required>
                        </label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <label class="checkout-page__form-field label">
                          <input type="tel" name="phone_billing" id="billing-phone" class="input-text dark"
                            placeholder="Phone" required>
                        </label>
                      </div>
                      <div class="col-md-6">
                        <label class="checkout-page__form-field label">
                          <input type="email" name="email_billing" id="billing-email" class="input-text dark"
                            placeholder="Email" required>
                        </label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <label class="checkout-page__form-field label">
                          <input type="text" name="address_billing" id="billing-address" class="input-text dark"
                            placeholder="Address" required>
                        </label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <label class="checkout-page__form-field label">
                          <input type="text" name="city_billing" id="billing-city" class="input-text dark"
                            placeholder="City" required>
                        </label>
                      </div>
                      <div class="col-md-4">
                        <label class="checkout-page__form-field label">
                          <input type="text" name="state_billing" id="billing-state" class="input-text dark"
                            placeholder="State" required>
                        </label>
                      </div>
                      <div class="col-md-4">
                        <label class="checkout-page__form-field label">
                          <input type="text" name="zip_billing" id="billing-zip" class="input-text dark"
                            placeholder="Zip" required>
                        </label>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Continue Button -->
                <div class="checkout-page__form-actions">
                  <button type="button" class="btn btn-dark submit">Continue</button>
                </div>
              </form>

              <div class="checkout-page__step">
                <div class="checkout-page__step-number">2</div>
                <span class="checkout-page__step-text">Shipping options</span>
              </div>
              <div class="checkout-page__step checkout-page__step--last">
                <div class="checkout-page__step-number">3</div>
                <span class="checkout-page__step-text">Payment & Review</span>
              </div>
            </div>
          </div>

          <!-- Right Column - Order Summary -->
          <div class="col-lg-4">
            <div class="order-summary">
              <h3 class="order-summary__title">Order summary</h3>

              <div class="order-summary__items">
                <div class="order-summary__item">
                  <span class="order-summary__item-text">Subtotal of 2 items</span>
                  <span class="order-summary__item-text order-summary__item-text--price">$7,300.00</span>
                </div>
                <div class="order-summary__item">
                  <span class="order-summary__item-text">Shipping to address</span>
                  <span class="order-summary__item-text order-summary__item-text--price">$30</span>
                </div>
                <div class="order-summary__item">
                  <span class="order-summary__item-text">Tax</span>
                  <span class="order-summary__item-text order-summary__item-text--price">$0</span>
                </div>
              </div>

              <!-- Coupon Section -->
              <div class="order-summary__coupon-section">
                <div class="order-summary__coupon-item">
                  <div class="order-summary__coupon-info">
                    <div class="order-summary__coupon-icon">
                      <svg class="icon">
                        <use href="#check"></use>
                      </svg>
                    </div>
                    <div class="order-summary__coupon-details">
                      <span class="order-summary__coupon-code"><b>tka75y</b> applied</span>
                    </div>
                  </div>
                  <div class="order-summary__coupon-actions">
                    <span class="order-summary__coupon-discount">-$511.00</span>
                    <button type="button" class="order-summary__coupon-remove">Remove</button>
                  </div>
                </div>
              </div>

              <!-- Order Total -->
              <div class="order-summary__total">
                <span class="order-summary__total-text">Order total</span>
                <span class="order-summary__total-text order-summary__total-text--price">$6,819.00</span>
              </div>

              <!-- Shipping Notice -->
              <div class="order-summary__shipping-notice">
                <div class="order-summary__notice-icon">
                  <svg class="icon">
                    <use href="#alert-info"></use>
                  </svg>
                </div>
                <p class="order-summary__notice-text">
                  Please notice one of the item has a longer delivery time and is expected to arrive within 12–14 weeks,
                  with an estimated delivery date of 05 May, 2025
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Subscribe Section -->
  {% include "partials/subscribe.njk" %}

  <!-- Footer -->
  {% include "partials/footer.njk" %}

  <script defer src="js/bundle.js"></script>
</body>

</html>